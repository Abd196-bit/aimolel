modules = ["python-3.11", "web", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "DieAI Server (Port 5002)"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DieAI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "DieAI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install flask flask-cors torch transformers requests PyJWT && python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "DieAI Learning Server"
author = 44635705
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install flask flask-cors torch transformers requests PyJWT beautifulsoup4 psutil"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"from services.database import DatabaseManager; db = DatabaseManager(); db.initialize_database(); print('Database initialized')\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "DieAI Server (Port 5002)"
author = 40760779
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_server_final.py"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
